{
    "extends": "@apst/tsconfig",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noEmit": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "#/*": [
                "./src/*"
            ],
            "#/public/*": [
                "./public/*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./.next/types/**/*.ts",
        "./next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
